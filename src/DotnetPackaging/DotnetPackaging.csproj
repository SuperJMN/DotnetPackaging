<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <Import Project="..\Common.props"/>
    <ItemGroup>
        <PackageReference Include="SixLabors.ImageSharp"/>
    </ItemGroup>

    <!-- Local project references for development -->
    <ItemGroup Condition="'$(UseLocalZafiroReferences)' == 'true'">
        <ProjectReference Include="..\..\Zafiro\src\Zafiro.DivineBytes\Zafiro.DivineBytes.csproj" />
        <ProjectReference Include="..\..\Zafiro\src\Zafiro.FileSystem\Zafiro.FileSystem.csproj" />
        <ProjectReference Include="..\..\Zafiro\src\Zafiro\Zafiro.csproj" />
    </ItemGroup>

    <!-- NuGet package references for production builds -->
    <ItemGroup Condition="'$(UseLocalZafiroReferences)' == 'false'">
        <PackageReference Include="Zafiro.DivineBytes" />
        <PackageReference Include="Zafiro.FileSystem" />
        <PackageReference Include="Zafiro" />
    </ItemGroup>
    
</Project>