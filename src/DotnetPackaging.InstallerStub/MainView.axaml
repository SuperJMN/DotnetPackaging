<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:installerStub="clr-namespace:DotnetPackaging.InstallerStub"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DotnetPackaging.InstallerStub.MainView"
             x:DataType="installerStub:WizardViewModel">
    <UserControl.DataTemplates>
        <DataTemplate DataType="{x:Type installerStub:WelcomePageVM}">
            <StackPanel Spacing="12">
                <TextBlock Text="{Binding Heading}" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding AdditionalInfo}" TextWrapping="Wrap"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Load metadata" Command="{Binding LoadMetadata}" />
                </StackPanel>
                <StackPanel Spacing="4">
                    <TextBlock Text="Metadata" FontWeight="Bold"/>
                    <TextBlock Text="{Binding ApplicationNameDisplay}" />
                    <TextBlock Text="{Binding VersionDisplay}" />
                    <TextBlock Text="{Binding VendorDisplay}" TextWrapping="Wrap"/>
                </StackPanel>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type installerStub:OptionsPageVM}">
            <StackPanel Spacing="8">
                <TextBlock Text="Select the installation folder" FontWeight="Bold"/>
                <TextBlock Text="{Binding Metadata.ApplicationName, StringFormat='Destination for {0}', TargetNullValue='Application not loaded'}" FontStyle="Italic"/>
                <TextBox Text="{Binding InstallDirectory, Mode=TwoWay}"/>
                <ProgressBar Minimum="0" Maximum="1" Value="{Binding ProgressFraction}" IsVisible="{Binding IsProgressVisible}" Height="6"/>
                <TextBlock Text="{Binding ProgressText}" FontStyle="Italic" IsVisible="{Binding IsProgressVisible}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type installerStub:CompletionPageVM}">
            <StackPanel Spacing="12">
                <TextBlock Text="{Binding Metadata.ApplicationName}" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="{Binding Status}" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding InstallDirectory}" FontFamily="Consolas" TextWrapping="Wrap"/>
                <Button Content="Launch application" Command="{Binding LaunchCommand}" HorizontalAlignment="Left"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.DataTemplates>
    <Frame Navigator="{Binding Navigator}" />
</UserControl>
