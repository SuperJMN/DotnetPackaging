<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:installerStub="clr-namespace:DotnetPackaging.InstallerStub"
        x:Class="DotnetPackaging.InstallerStub.WizardWindow"
        Icon="/Assets/Icon.ico"
        Width="560" Height="360"
        mc:Ignorable="d"
        Title="{Binding ApplicationName, StringFormat='{}{0} installer'}"
        x:DataType="installerStub:WizardViewModel">
  <Grid RowDefinitions="Auto,*">
    <StackPanel Orientation="Horizontal" Margin="12" Spacing="8">
      <TextBlock Text="Installing:"/>
      <TextBlock Text="{Binding ApplicationName}" FontWeight="Bold"/>
    </StackPanel>
    <Border Grid.Row="1" Margin="12" BorderBrush="Gray" BorderThickness="1" CornerRadius="6">
      <ScrollViewer>
        <StackPanel Margin="12" Spacing="12">
          <TextBlock Text="Destination folder:"/>
          <TextBox Text="{Binding InstallDirectory}"/>
          <Button Content="Install" Command="{Binding InstallCommand}"/>
          <TextBlock Text="{Binding Status}"/>
        </StackPanel>
      </ScrollViewer>
    </Border>
  </Grid>
</Window>
