<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:installerStub="clr-namespace:DotnetPackaging.InstallerStub"
        x:Class="DotnetPackaging.InstallerStub.WizardWindow"
        Width="640" Height="420"
        mc:Ignorable="d"
        Title="Installer" 
        x:DataType="installerStub:WizardViewModel">
  <Grid RowDefinitions="Auto,*">
    <TextBlock Margin="12" Text="Installer (preview)"/>
    <!-- Placeholder: later use z:SlimWizardControl -->
    <Border Grid.Row="1" Margin="12" BorderBrush="Gray" BorderThickness="1" CornerRadius="6">
      <ScrollViewer>
        <StackPanel Margin="12" Spacing="12">
          <TextBlock Text="This is a minimal placeholder wizard. The final version will use Zafiro's SlimWizard."/>
          <TextBlock Text="Select destination folder:"/>
          <TextBox Text="{Binding InstallDirectory}"/>
          <Button Content="Install" Command="{Binding InstallCommand}"/>
          <TextBlock Text="{Binding Status}"/>
        </StackPanel>
      </ScrollViewer>
    </Border>
  </Grid>
</Window>
