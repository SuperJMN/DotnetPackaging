<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:location="clr-namespace:DotnetPackaging.Exe.Installer.Installation.Wizard.Location"
             mc:Ignorable="d" 
             x:Class="DotnetPackaging.Exe.Installer.Installation.Wizard.Location.LocationView"
             x:DataType="location:ILocationViewModel">
    <StackPanel Spacing="8" VerticalAlignment="Center">
        <TextBlock Text="Select the installation folder" FontWeight="Bold"/>
        <DockPanel HorizontalSpacing="8">
            <Button DockPanel.Dock="Right" Content="Browseâ€¦" Command="{Binding Browse}"/>
            <TextBox Text="{Binding InstallDirectory, Mode=TwoWay}" />
        </DockPanel>
    </StackPanel>
</UserControl>
