<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:DotnetPackaging.Exe.Installer.Steps.Location"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DotnetPackaging.Exe.Installer.Steps.Location.LocationView"
             x:DataType="l:ILocationViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="Select the installation folder" FontWeight="Bold"/>
        <TextBox Text="{Binding InstallDirectory, Mode=TwoWay}"/>
    </StackPanel>
</UserControl>
