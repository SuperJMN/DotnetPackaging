<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:finish="clr-namespace:DotnetPackaging.Exe.Installer.Steps.Finish"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DotnetPackaging.Exe.Installer.Steps.Finish.FinishView" x:DataType="finish:FinishViewModel">
    <StackPanel Spacing="8">
        <TextBlock>The application has been installed successfully.</TextBlock>
        <CheckBox IsChecked="{Binding LaunchOnClose}"
                  Content="Launch the application when closing"
                  IsThreeState="False"/>
    </StackPanel>
</UserControl>
