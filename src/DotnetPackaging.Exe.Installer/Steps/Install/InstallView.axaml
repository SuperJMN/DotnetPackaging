<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:installation="clr-namespace:DotnetPackaging.Exe.Installer.Steps.Install"
             xmlns:progressReporting="clr-namespace:Zafiro.ProgressReporting;assembly=Zafiro"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DotnetPackaging.Exe.Installer.Steps.Install.InstallView" 
             x:DataType="installation:InstallViewModel">
    
    <UserControl.Resources>
        <BytesToHumanConverter x:Key="BytesToHumanConverter" />
        <DataTemplate x:Key="DoubleToBytesTemplate">
            <TextBlock Text="{Binding ., Converter={StaticResource BytesToHumanConverter}}"></TextBlock>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <TextBlock Margin="14 0" IsVisible="{Binding !Install.IsExecuting^}">We will now install the application. Click Install to proceed with the installation</TextBlock>
        <TextBlock HorizontalAlignment="Center" IsVisible="{Binding Install.IsExecuting^}">Installing...</TextBlock>
        <ProgressControl>
            <ProgressControl.Progress>
                <progressReporting:Unknown />
            </ProgressControl.Progress>
        </ProgressControl>
    </Grid>
    
</UserControl>